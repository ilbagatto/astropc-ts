{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "esnext",
    "lib": ["dom"],
    "declaration": true,
    "declarationMap": false,
    "outDir": "./dist/types",
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  }
}
